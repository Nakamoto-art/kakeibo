%nav.navbar.navbar-dark.bg-dark
  .navbar-brand
    %span.navbar-brand.mb-0.h1 詳細ページ
  .nav
    %form.form-inlin.d-flex.p-2.bd-highlight
      %a{href: costs_path, class: 'nav-link'}
        %button.btn.btn-sm.btn-outline-secondary 戻る

.p-5.bg-info.text-white
  .container.bg-secondary
    .h2.mx-auto{style:"width: 130px;"} 内容
    %br/
    .h3 日付：
    .form-control.form-control-lg
      = @cost.date
    %br/
    .h3 科目名：
    .form-control.form-control-lg
      = @cost.name
    %br/
    .h3 備考：
    .form-control.form-control-lg
      = simple_format(@cost.description)
    .p-5.mt-4.mx-auto{style:"width: 200px;"}
      %button
        = link_to "編集", edit_cost_path(@cost.id)
      %button
        = link_to "削除", cost_path(@cost.id), method: :delete, data: { confirm: "本当に削除しますか？"}

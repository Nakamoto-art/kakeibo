%nav.navbar.navbar-dark.bg-dark
  .navbar-brand
    %span.navbar-brand.mb-0.h1 新規登録画面
  .nav
    %form.form-inlin.d-flex.p-2.bd-highlight
      %a{href: new_user_session_path, class: 'nav-link'}
        %button.btn.btn-outline-success ログイン
.p-5.bg-info.text-white
  .container
    .bg-secondary.mx-auto
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field.p-4.h4
          = f.label :nickname
          %br/
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
        .field.p-4.h4
          = f.label :email
          %br/
          = f.email_field :email, autocomplete: "email"
        .field.p-4.h4
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length}文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field.p-4.h4
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions.p-3.h4
          = f.submit "新規登録"
